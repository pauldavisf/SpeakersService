@model IEnumerable<SpeakersService.Models.SpeakerViewModel>
@{
    ViewData["Title"] = "Результаты";
}

<h3>Просмотр результатов:</h3>
@foreach (var f in Model)
{
    <a href="@(Context.Request.Path + "?speakerName=" + f.Name)">@Url.Content(f.Name)</a>
}

@{
    if (Context.Request.Query["speakerName"].Count != 0)
    {
        <h3>Результаты для @(Context.Request.Query["speakerName"][0]):</h3>
        <br />
        var speakerName = Context.Request.Query["speakerName"][0];

        var speaker = Model.First(f => f.Name == speakerName);

        foreach (var noiseAndW in speaker.W)
        {
            <h1>Разборчивость для вида шума "@(noiseAndW.Key)": </h1>
            foreach (var w in noiseAndW.Value)
            {
                <p>@(w)</p>
            }
        }
    }
}